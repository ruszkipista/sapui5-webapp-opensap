<mvc:View
    controllerName="opensap.myapp.controller.App"
    displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
	xmlns:mvc="sap.ui.core.mvc">
    <Carousel>
		<pages>
			<Image src="https://placehold.co/600x400/orange/white" height="600px"/>
			<Image src="https://placehold.co/600x400/green/white" height="600px"/>
		</pages>
	</Carousel>
    <Button text="{i18n>showHelloButtonText}" press="onShowHello"/>
	<Input
		value="{helloPanel>/recipient/name}"
		description="{ parts:['i18n>helloMsg', 'helloPanel>/recipient/name'], formatter: 'formatMessage' }"
		valueLiveUpdate="true"
		width="60%"/>
</mvc:View>