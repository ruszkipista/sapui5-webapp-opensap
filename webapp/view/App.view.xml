<mvc:View
    controllerName="opensap.myapp.controller.App"
    displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
    <Carousel>
		<pages>
			<Image src="https://placehold.co/600x400/orange/white" height="600px"/>
			<Image src="https://placehold.co/600x400/green/white" height="600px"/>
		</pages>
	</Carousel>
    <Button text="Say Hello!" press="onShowHello"/>
	<Input
		value="{helloPanel>/recipient/name}"
		description="Hello {helloPanel>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"/>
</mvc:View>